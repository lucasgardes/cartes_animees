<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.cartesanimeesapp.ui.login.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_loginFragment_to_createPasswordFragment"
            app:destination="@id/createPasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/createPasswordFragment"
        android:name="com.example.cartesanimeesapp.ui.login.CreatePasswordFragment"
        android:label="CrÃ©er un mot de passe"
        tools:layout="@layout/fragment_create_password">

        <argument
            android:name="patientId"
            app:argType="integer" />

        <action
            android:id="@+id/action_createPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cartesanimeesapp.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeFragment_to_serieFragment"
            app:destination="@id/serieFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/serieFragment"
        android:name="com.example.cartesanimeesapp.ui.series.SerieFragment"
        android:label="Serie"
        tools:layout="@layout/fragment_serie">
        <action
            android:id="@+id/action_serieFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>
        <argument
            android:name="serieId"
            app:argType="integer"/>
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.cartesanimeesapp.ui.profile.ProfileFragment"
        android:label="Profil"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>
